@import 'nib'
@import "scrollbars"


body
  padding-top 40px


.jGrowl
  padding-top 40px

.toolbar
  padding-top 12px
  padding-left 12px
  height 40px
  border-style solid
  border-color #8A8A8A
  border-width 0px 0px 5px 0px
  .save_button
    float left
    margin-right: 20px

  .secret
    float left
    input
      margin-left 10px

  .link a
    display none

  .public_link, .remote_link
    position relative
    top 6px
    float right
    margin-right 50px
    display inline

.edit_view
  position absolute
  top 100px
  bottom 0px
  left 0px
  right 0px

#editor
  width 50%
  height 100%

button.save
  margin-top 420px
  margin-left: 20px
  margin-right: 20px


.preview iframe
  position absolute
  width 50%
  height 500px
  top 100px
  left 50%

.about
  position absolute
  top 600px
  left 50%
  padding 2em
  
.tip
  border-bottom-color #ccc
  border-bottom-style dashed
  border-bottom-width 1px
  width: auto
  position: relative
  top: -2px