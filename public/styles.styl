@import 'nib'


body
  padding-top 40px

.ask_secret
  display none
  padding 1em
  background-color white

.jGrowl
  padding-top 40px

.toolbar
  padding-top 12px
  padding-left 12px
  height 40px
  border-style solid
  border-color #8A8A8A
  border-width 0px 0px 5px 0px
  .save_button
    float left
    margin-right: 10px

  .secret
    float left
    input
      margin-left 10px

  .link a
    display none

  .public_link, .remote_link
    position relative
    top 6px
    float right
    margin-right 80px
    display inline

options_height = 28px

.options
  height options_height

.edit_view
  position absolute
  top 100px + options_height
  bottom 0px
  left 0px
  right 0px

#editor
  width 50%
  height 100%

button.save
  margin-top 420px
  margin-left: 20px
  margin-right: 20px


.preview iframe
  position absolute
  width 50%
  height 500px
  top 100px
  left 50%
  border-bottom: 5px solid #8A8A8A

.about
  position absolute
  top 600px
  left 50%
  padding 2em
  
.tip
  border-bottom-color #ccc
  border-bottom-style dashed
  border-bottom-width 1px
  width: auto
  position: relative
  top: -2px

#logo
  color: green
  font-family: 'Leckerli One', cursive;
  font-size: 20px
  text-shadow: 0px 1px 1px #000;
  filter: dropshadow(color=#ffffff, offx=0, offy=-1);
  
.speakernote
  display none
