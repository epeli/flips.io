    link(rel='stylesheet', href='/styles.css')

    !{renderScriptTags()}

    script(type="text/javascript", src="/javascripts/jade.js")

    script(type="text/javascript", src="/deck.js/modernizr.custom.js")
    script(type="text/javascript", src="/deck.js/core/deck.core.js")
    script(type="text/javascript", src="/deck.js/extensions/goto/deck.goto.js")
    script(type="text/javascript", src="/deck.js/extensions/hash/deck.hash.js")
    script(type="text/javascript", src="/deck.js/extensions/menu/deck.menu.js")
    script(type="text/javascript", src="/deck.js/extensions/navigation/deck.navigation.js")
    script(type="text/javascript", src="/deck.js/extensions/status/deck.status.js")
    script(type="text/javascript", src="/deck.js/extensions/notes/deck.notes.js")
    script#deck_template(type="text/x-jade-template").
      // goto
      form(action=".", method="get").goto-form
        label(for="goto-slide") Go to slide:
        input#goto-slide(type="number", name="slidenum")
        input(type="submit", value="Go")

      // status
      p.deck-status
        span.deck-status-current
        /
        span.deck-status-total

      // navigation
      a(href="#", title="Previous").deck-prev-link &#8592;
      a(href="#", title="Next").deck-next-link &#8594;

      // hash
      a(href=".", title="Permalink to this slide").deck-permalink #

      // Speaker notes
      .deck-notes

        // a.deck-show-notes(href="#") Show speaker notes
        a.deck-hide-notes(href="#").deck-note-button Hide
        .deck-note-container Example note

      .deck-show-notes
        a(href="#").deck-note-button Show Speaker Notes

      script(type="text/javascript")
        var _gaq = _gaq || [];
        _gaq.push(['_setAccount', 'UA-25393535-1']);
        _gaq.push(['_trackPageview']);

